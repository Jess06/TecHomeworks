<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.ittepic.tpdm_u3_practica2.AcercaDe"
    android:padding="16sp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="214dp"
            app:srcCompat="@drawable/us"
            android:id="@+id/imageView2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />


        <TextView
            style="@style/labels"
            android:text="TAREAS DEL TEC APP"
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" />

        <TextView
            style="@style/labels"
            android:text="(C) Jessica Lizbeth Paro Pérez. César Antonio Pérez González. ITTepic. Taller de Programación para Dispositivos Móviles. ISC."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:gravity="center"
            android:layout_marginBottom="10sp"/>

        <Button
            style="@style/button"
            android:text="Aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3" />

    </LinearLayout>
</ScrollView>
